
<MudTextField Label="Server"
              Variant="Variant.Filled"
              FullWidth
              Margin="Margin.Dense"
              @bind-Value="@Settings.Server" />

<MudSwitch Label="Use Basic-Auth"
           Color="Color.Primary"
           @bind-Checked="@Settings.UseBasicAuth" />

@if (Settings.UseBasicAuth)
{
    <MudTextField Label="Username"
              Variant="Variant.Filled"
              FullWidth
              Margin="Margin.Dense"
              @bind-Value="@Settings.Username" />

    <MudTextField Label="Password"
              Variant="Variant.Filled"
              FullWidth
              Margin="Margin.Dense"
              InputType="@(showPassword ? InputType.Text : InputType.Password)"
              Adornment="Adornment.End"
              AdornmentIcon="@Icons.Filled.RemoveRedEye"
              OnAdornmentClick="() => showPassword = !showPassword"
              @bind-Value="@Settings.Password" />
}
else
{
    <MudTextField Label="Api-Key"
              Variant="Variant.Filled"
              FullWidth
              Margin="Margin.Dense"
              @bind-Value="@Settings.ApiKey" />
}
@code {
    private bool showPassword = false;
    [Parameter]
    public WebSmsComSettings Settings { get; set; } = default!;
}
